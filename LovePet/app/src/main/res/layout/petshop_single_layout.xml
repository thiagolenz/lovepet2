<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="fill_parent"
    android:background="@android:color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:paddingTop="22dp"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:layout_scrollFlags="scroll|enterAlways">
            <TextView
                android:text="Ache Seu PET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#ffffffff"
                android:textStyle="bold"
                android:textSize="18dp"
                android:autoText="false" />
        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <android.support.design.widget.CoordinatorLayout
            android:layout_width="fill_parent"
            android:paddingTop="78dp"
            android:layout_height="wrap_content">
            <LinearLayout android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/viewA"
                    android:background="@drawable/loja_petshop"
                    android:layout_width="fill_parent"
                    android:orientation="horizontal"
                    android:weightSum="1"
                    android:layout_height="200dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="0.8"
                        android:layout_gravity="bottom"
                        android:textSize="30dp"
                        android:textColor="@android:color/white"
                        android:paddingLeft="30dp"
                        android:text="Center Pet Shop"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:background="@color/selected_item"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_width="0dp"
                            android:layout_weight="0.17"
                            android:layout_gravity="center_vertical"
                            android:src="@android:drawable/ic_menu_call"
                            android:layout_height="20dp" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="0.8"
                            android:orientation="vertical"
                            android:layout_height="wrap_content">
                            <TextView
                                android:text="(31) 3476-7943 / (31) 9639-1288"
                                android:textSize="14dp"
                                android:textColor="#000000"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent" />
                            <TextView
                                android:text="Telefone"
                                android:textSize="12dp"
                                android:layout_marginTop="4dp"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent" />

                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="25dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_width="0dp"
                            android:layout_weight="0.17"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/ic_pin_drop_black_24dp"
                            android:layout_height="20dp" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="0.8"
                            android:orientation="vertical"
                            android:layout_height="wrap_content">
                            <TextView
                                android:text="Av. Presidente Tancredo Neves, 2325, loja 05 - Bairro Castelo, Belo Horizonte - MG"
                                android:textSize="14dp"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:textColor="#000000" />
                            <TextView
                                android:text="Endereço"
                                android:textSize="12dp"
                                android:layout_marginTop="4dp"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent" />

                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="25dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_width="0dp"
                            android:layout_weight="0.17"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/ic_materialup_time"
                            android:layout_height="20dp" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="0.8"
                            android:orientation="vertical"
                            android:layout_height="wrap_content">
                            <TextView
                                android:text="Segunda a Sexta Feira - 09:30 as 17:30, Sábados e Domingos - 10h as 15:30"
                                android:textSize="14dp"
                                android:textColor="#000000"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent" />
                            <TextView
                                android:text="Horário de Funcionamento"
                                android:textSize="12dp"
                                android:layout_marginTop="4dp"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent" />

                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="25dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_width="0dp"
                            android:layout_weight="0.17"
                            android:layout_gravity="center_vertical"
                            android:src="@android:drawable/ic_dialog_email"
                            android:layout_height="20dp" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="0.8"
                            android:orientation="vertical"
                            android:layout_height="wrap_content">
                            <TextView
                                android:text="centerpet@veterinariacenterpet.com.br"
                                android:textSize="14dp"
                                android:textColor="#000000"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent" />
                            <TextView
                                android:text="E-Mail"
                                android:layout_marginTop="4dp"
                                android:layout_marginBottom="10dp"
                                android:textSize="12dp"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:paddingLeft="30dp"
                        android:paddingRight="30dp"
                        android:layout_height="250dp">
                        <fragment xmlns:android="http://schemas.android.com/apk/res/android"
                            xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                            android:layout_height="match_parent" android:id="@+id/map" tools:context=".MapsActivity"
                            android:name="com.google.android.gms.maps.SupportMapFragment" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>


            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:clickable="true"
                app:backgroundTint="#92c34f"
                android:src="@drawable/ic_add_black"
                app:layout_anchor="@id/viewA"
                android:onClick="buttonFeedbackClick"
                app:layout_anchorGravity="bottom|right|end"/>
        </android.support.design.widget.CoordinatorLayout>
    </ScrollView>



</RelativeLayout>